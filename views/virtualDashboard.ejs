<!DOCTYPE html>
<html>
  <head>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
  </head>

  <body>
    <div class="container-fluid" style="padding: 0px 10px 0px 10px">
      <%- include('partials/navigation') %>
      <div id="timer">
        <span id="rem-time"></span>
        <button id="end-virtual" onclick="finishVirtual('<%=code%>')">End Virtual</button>
      </div>
      <p><%= name %></p>
      <a href="/virtual/<%=code%>/ranklist">Click for Ranklist</a>
      <table
        id="contest-table"
        class="table table-bordered table-dark table-striped"
      >
        <thead>
          <tr>
            <th scope="col">Problem Code</th>
          </tr>
        </thead>
        <tbody id="contest-table-data">
          <% for(var i=0; i < problemsList.length; i++) { %>
          <tr>
            <td>
              <a
                href="/virtual/<%= code %>/<%= problemsList[i].problemCode %>"
              >
                <%= problemsList[i].problemCode %>
              </a>
            </td>
          </tr>
          <% } %>
        </tbody>
      </table>

      <h5 class="text-white">Announcements :</h5>
      <div class="text-white"><%- announcements %></div>
    </div>
    <script src="/js/virtualHelper.js"></script>
    <script>
      
      let ok = "<%= isRunning %>";
      console.log(ok);
      if (ok == "true") {
        let endTime = "<%= endTime %>";
        countdown(endTime);
      } else {
        document.getElementById("rem-time").innerHTML = "Virtual Finished";
        document.getElementById("end-virtual").remove();
      }
    </script>
  </body>
</html>
