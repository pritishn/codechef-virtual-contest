<!DOCTYPE html>
<html lang="en">
<%- include('partials/header') %>

    <body class="bg-dark">
            <nav class="navbar navbar-light bg-dark ">
                    <h2 class="text-white" href="#">CODECHEF VIRTUAL CONTEST</h2>
                    <a href="http://localhost:3000/logout" ><button class="btn btn-outline-light">Logout</button></a>
                </nav>
        <br>
        <div class="container"style="text-align: left">
           <h3 class="text-white">
            <span><%= name %></span><span>Button</span>
            </h3>
            <table id="contest-table" class="table table-dark table-striped">
                <thead>
                  <tr>
                    <th scope="col">Problem Code</th>
                    <th scope="col">Submissions</th>
                  </tr>
                </thead>
                <tbody id="contest-table-data">
                        <% for(var i=0; i < problemsList.length; i++) { %>
                            <tr>
                              <td><a href="/contestPage/<%= code %>/problem/<%= problemsList[i].problemCode %>"><%= problemsList[i].problemCode %></a></td>
                              <td><%= problemsList[i].successfulSubmissions %></td>
                            </tr>
                         <% } %>
                </tbody>  
            </table>
            <h4 class="text-red">
                <a href="/contestPage/<%= code %>/ranklist">Ranklist</a>
            </h4>
            <h5 class="text-white">
                Announcements : 
            </h5>
            <div class="text-white">
                <%- announcements %>
            </div>
        </div> 
    </body>
</html>